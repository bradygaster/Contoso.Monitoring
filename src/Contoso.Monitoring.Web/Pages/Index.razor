@page "/"
@inject IConfiguration _configuration;
@inject SiloService _siloService;

<h1>Monitored Areas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Temperature (Fahrenheit)</th>
            <th>Temperature (Celsius)</th>
        </tr>
    </thead>
    <tbody>
        @if (_areas != null)
        {
            @foreach (var area in _areas)
            {
                <tr>
                    <td>@area.Name</td>
                    <td id='@($"{area.Name}-F")'>@area.Temperature.Fahrenheit.ToString("#")</td>
                    <td id='@($"{area.Name}-C")'>@area.Temperature.Celsius.ToString("#")</td>
                </tr>
            }
        }
    </tbody>
</table>

@code
{
    private List<MonitoredArea> _areas = new List<MonitoredArea>();

    protected override async Task OnInitializedAsync()
    {
        _areas = await _siloService.GetMonitoredAreas();

        base.StateHasChanged();
    }
}