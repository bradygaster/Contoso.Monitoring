@page "/"
@inject ContosoMonitoringClientService _contosoMonitoringClientService;

<h1>Monitored Areas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Temperature (Fahrenheit)</th>
            <th>Temperature (Celsius)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var area in _areas)
    {
        <tr>
            <td>@area.Name</td>
            <td>@area.Temperature.Fahrenheit.ToString("#")</td>
            <td>@area.Temperature.Celsius.ToString("#")</td>
        </tr>
    }
    </tbody>
</table>

@code
{
    private List<MonitoredArea> _areas = new List<MonitoredArea>();

    protected override async Task OnInitializedAsync()
    {
        _areas = await _contosoMonitoringClientService.GetMonitoredAreas();
    }

}